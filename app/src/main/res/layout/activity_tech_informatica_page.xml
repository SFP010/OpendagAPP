<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TechInformaticaPage"
    android:background="#CC0033">
    <android.support.v4.widget.DrawerLayout
        android:id="@+id/dl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".Homescreen">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/textView8"
                android:layout_width="368dp"
                android:layout_height="80dp"
                android:layout_below="@+id/lijnn"
                android:gravity="center"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginEnd="42dp"
                android:layout_marginRight="42dp"
                android:text="We train you to be a software engineer. You get started with the development of software for various applications. You are able to analyze design and implement complex IT systems"
                android:textColor="#FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="239dp"
                android:layout_height="38dp"
                android:layout_below="@+id/imageView5"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="86dp"
                android:layout_marginLeft="86dp"
                android:layout_marginEnd="86dp"
                android:layout_marginRight="86dp"
                android:text="Tech Informatica"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView5" />


            <TextView
                android:id="@+id/textView9"
                android:layout_width="384dp"
                android:layout_height="219dp"
                android:layout_below="@+id/lijnview1"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:gravity="center"
                android:text="Software can be found all around us. You are the specialist in creating complex software systems that work quickly, efficiently and securely. You can think of developing a app, but also analyzing large amounts of data. When developing these systems you come into contact with different languages. In the first year you learn how to program in Python and advanced programming languages ​​such as Java / C #. From the second year on, you choose which programming language you want to use. In addition to programming and developing various applications, you also learn to collaborate."
                android:textColor="#FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view3" />

            <Button
                android:id="@+id/btnOpendays"
                android:layout_width="289dp"
                android:layout_height="63dp"
                android:layout_below="@+id/lijnview2"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="120dp"
                android:layout_marginRight="120dp"
                android:background="@drawable/custom_button"
                android:text="Upcoming openday:                                                  04/04/2019"
                android:textColor="#CC0033"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lijnview2" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="388dp"
                android:layout_height="78dp"
                android:layout_below="@+id/view3"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="23dp"
                android:layout_marginRight="23dp"
                android:text="Are you interested in new technological developments, curious, a little quirky and a go-getter, then the Computer Science course is for you!"
                android:textColor="#FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lijnview1" />


            <View
                android:id="@+id/lijnview1"
                android:layout_width="315dp"
                android:layout_height="3dp"
                android:layout_below="@+id/textView8"

                android:layout_marginTop="4dp"
                android:layout_marginEnd="96dp"
                android:layout_marginRight="96dp"
                android:background="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnOpendays"></View>

            <View
                android:id="@+id/lijnview2"
                android:layout_width="315dp"
                android:layout_height="3dp"
                android:layout_below="@+id/textView9"

                android:layout_marginEnd="96dp"
                android:layout_marginRight="96dp"
                android:background="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView9"></View>

            <View
                android:id="@+id/view3"
                android:layout_width="315dp"

                android:layout_height="3dp"
                android:layout_below="@+id/btnOpendays"
                android:layout_marginEnd="96dp"
                android:layout_marginRight="96dp"
                android:background="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView8"></View>

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="324dp"
                android:layout_height="86dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="43dp"
                android:layout_marginLeft="43dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="44dp"
                android:layout_marginRight="44dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/appz" />
        </android.support.constraint.ConstraintLayout>

        <android.support.design.widget.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:headerLayout="@layout/navigation_header"
            app:menu="@menu/navigation_menu">


        </android.support.design.widget.NavigationView>

    </android.support.v4.widget.DrawerLayout>

</android.support.constraint.ConstraintLayout>