<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC0033">

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/dl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:context=".Homescreen">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="157dp"
                android:layout_height="140dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="124dp"
                android:layout_marginRight="124dp"
                android:layout_marginBottom="5dp"
                android:contentDescription="CMILogo"
                app:layout_constraintBottom_toTopOf="@+id/scrollView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.975"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/cmi" />

            <ScrollView
                android:id="@+id/scrollView2"
                android:layout_width="395dp"
                android:layout_height="448dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="19dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView"
                app:layout_constraintVertical_bias="1.0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/informaticaClick"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="147dp"
                        android:layout_height="50dp"
                        android:background="@drawable/custom_button"
                        android:gravity="center"
                        android:text="Computer Science"
                        android:textColor="#CC0033"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="We train you to be a software engineer. You get started with the development of software for various applications. You are able to analyze design and implement complex IT systems. Click button above for more"
                        android:textColor="#FFFFFF" />

                    <Button
                        android:id="@+id/communicationClick"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="147dp"
                        android:layout_height="50dp"
                        android:background="@drawable/custom_button"
                        android:text="Communication"
                        android:textColor="#CC0033"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Do you have a keen eye and ear for the stories op people and brands? Are you creative with text and image and facinated by the world of media? Then the communication course is for you! CLick button above for more"
                        android:textColor="#FFFFFF" />

                    <Button
                        android:id="@+id/techinformaticaClick"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="147dp"
                        android:layout_height="50dp"
                        android:background="@drawable/custom_button"
                        android:hint="Click for more"
                        android:text="Computer engineering"
                        android:textColor="#CC0033"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="As a technical computer scientist you work on modern IT systems in which hardware and software are integrated. Thanks to programming and hardware knowledge, you can operate at the intersection thereof. Click button above for more"
                        android:textColor="#FFFFFF" />

                    <Button
                        android:id="@+id/cmgtbutton"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="147dp"
                        android:layout_height="50dp"
                        android:background="@drawable/custom_button"
                        android:text="CMGT"
                        android:textColor="#CC0033"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Creative Media and Game Technologies is about innovating and making digital products.  CMGT'er means you're a developer who develops interactive digital products, like web- and phone applications, and you'll also learn the basics about making games"
                        android:textColor="#ffffff" />

                    <Button
                        android:id="@+id/button4"
                        android:layout_width="147dp"
                        android:layout_height="50dp"
                        android:background="@drawable/custom_button"
                        android:text="CMD"
                        android:textColor="#CC0033"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textView19"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Communication and Multimedia Design is a study about designing. As a designer you'll work within studio's, for real clients. You'll learn how to design websites or apps , and you'll learn how to prototype and test."
                        android:textColor="#ffffff" />

                </LinearLayout>
            </ScrollView>

        </android.support.constraint.ConstraintLayout>

        <android.support.design.widget.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:headerLayout="@layout/navigation_header"
            app:menu="@menu/navigation_menu">


        </android.support.design.widget.NavigationView>

    </android.support.v4.widget.DrawerLayout>


</android.support.constraint.ConstraintLayout>